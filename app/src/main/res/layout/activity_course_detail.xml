<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/component_title" />

    <ScrollView
        android:id="@+id/course_detail_scrollveiw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--正式内容layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- 头部图片-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/course_detail_cover_height">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:src="@drawable/img_default" />
                    <!-- 点赞-->
                    <LinearLayout
                        android:id="@+id/ll_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_praise"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/ic_launcher" />
                        <TextView
                            android:id="@+id/tv_praise"
                            android:layout_width="40dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_gray_half"
                            android:text="点赞"
                            style="@style/text_white_min"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- 标题-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/course_detail_margin_leftright"
                    android:layout_marginRight="@dimen/course_detail_margin_leftright"
                    android:layout_height="wrap_content">
                    <!-- 标题-->
                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我是标题 TITLE"
                        style="@style/text_pink_maxmax"/>
                    <!-- 赞-->
                    <ImageView
                        android:id="@+id/iv_praiseIcon"
                        android:layout_width="@dimen/praiseIcon_width"
                        android:layout_height="@dimen/praiseIcon_width"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentBottom="true"/>
                    <TextView
                        android:id="@+id/tv_praiseNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/iv_praiseIcon"
                        android:layout_marginLeft="10dp"
                        android:text="56" />

                    <LinearLayout
                        android:id="@+id/ll_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical">
                        <!-- 个人头像-->
                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="@dimen/course_item_avatar_width"
                            android:layout_height="@dimen/course_item_avatar_width"
                            android:src="@mipmap/ic_launcher" />
                        <!-- 个人昵称-->
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAME"
                            android:layout_marginTop="8dp"
                            style="@style/text_gray_min"/>
                    </LinearLayout>

                </RelativeLayout>
                <TextView style="@style/layout_line_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/bg_gray"/>

                <!-- 教程具体内容-->
                <LinearLayout
                    android:id="@+id/ll_courseDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.netease.ecos.views.ExtensibleListView
                        android:id="@+id/lv_courseStep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:listSelector="@android:color/transparent">
                    </com.netease.ecos.views.ExtensibleListView>
                </LinearLayout>
                <TextView style="@style/layout_line_gray"/>

                <!-- 网友作品-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bg_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@color/bg_red"/>
                        <TextView
                            android:id="@+id/tv_otherWorks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            style="@style/text_dark_max"
                            android:text="200个网友作品"/>
                    </LinearLayout>
                    <!-- 图片展示-->
                    <com.netease.ecos.views.HorizontalListView
                        android:id="@+id/hlv_otherWorks"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/course_detail_otherWorks_height"
                        android:background="@color/bg_white"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:descendantFocusability="afterDescendants" />
                    <!-- 所有图片-->
                    <Button
                        android:id="@+id/btn_allWorks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_max_height"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        style="@style/text_dark_max"
                        android:background="@drawable/btn_max_gray"
                        android:text="全部作品" />
                </LinearLayout>

                <!-- 底部按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 上传-->
                    <LinearLayout
                        android:id="@+id/ll_uploadMyWork"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_max_height"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_max_green"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="上传我的作品"
                            style="@style/text_white_max"/>
                    </LinearLayout>
                    <TextView style="@style/layout_line_gray"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/bg_gray"/>
                    <!-- 评论-->
                    <Button
                        android:id="@+id/btn_allEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@color/bg_white"
                        style="@style/text_dark_max"
                        android:gravity="center"
                        android:text="200个评论" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
