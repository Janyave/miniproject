<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/RecyclerShow"
    android:background="#000">

    <ImageView
        android:id="@+id/pic_dis"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="#44ffffff"
        android:layout_alignParentBottom="true" />

    <TextView
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25个赞"
        android:id="@+id/textViewAmz"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        android:clickable="true"
        android:layout_alignLeft="@+id/pic_dis"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/pic_dis"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentStart="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/textViewAmz"
        android:layout_marginRight="10dp"
        android:gravity="right|bottom">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewAuthor"
            android:background="#ffffff"/>
        <TextView
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:id="@+id/textViewAuthor"
            android:textColor="#ffffff"
            android:clickable="true" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大圣归来"
        android:id="@+id/textViewTitle"
        android:textColor="#ffffff"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/textViewAmz"
        android:layout_alignLeft="@+id/textViewAmz"
        android:background="@android:color/transparent" />

</RelativeLayout>