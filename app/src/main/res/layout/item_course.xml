<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RecyclerShow"
    android:background="@drawable/bg_course_item"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp">
    <!-- 图片-->
    <ImageView
        android:id="@+id/pic_dis"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/img_default"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/course_item_avatar_width"
            android:layout_height="@dimen/course_item_avatar_width"
            android:id="@+id/imageViewAuthor"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="大圣归来"
                android:id="@+id/textViewTitle"
                style="@style/text_pink_max"/>
            <TextView
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"
                style="@style/text_gray_min"
                android:id="@+id/textViewAuthor"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="@dimen/course_item_focus_width"
            android:layout_height="@dimen/course_item_focus_width"
            android:layout_gravity="right|bottom"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25个赞"
            android:id="@+id/textViewAmz"
            style="@style/text_dark_min"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>








</LinearLayout>
</LinearLayout>