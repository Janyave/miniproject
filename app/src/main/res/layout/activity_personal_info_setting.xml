<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ecos="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.netease.ecos.activity.PersonalInfoSettingActivity"
    android:background="@color/bg_gray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title">

        <LinearLayout
            android:id="@+id/lly_left_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:contentDescription="标题左侧按钮，含图标和按钮，根据需要进行显示和隐藏，并更改名称"
            android:minWidth="80dp"
            android:orientation="horizontal">

            <include
                android:id="@+id/iv_left"
                layout="@layout/component_left_arrow" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_left"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="返回"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="设 置"
            android:textSize="@dimen/tv_title_txsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_label_100px"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_40px"
        android:paddingRight="@dimen/margin_40px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/bg_red" />

            <TextView
                android:id="@+id/tv_otherWorks"
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="个人资料" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white">


        <!--android:layout_height="@dimen/height_item_240px"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px"
            android:paddingTop="@dimen/margin_10px"
            android:paddingBottom="@dimen/margin_10px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="头像"
                style="@style/text_dark_max"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <com.netease.ecos.views.RoundedNetworkImageView
                android:id="@+id/niv_personal_user_avatar"
                android:layout_width="@dimen/circle_icon_140px"
                android:layout_height="@dimen/circle_icon_140px" />
            <!--<com.netease.ecos.utils.RoundImageView
                android:id="@+id/personal_info_set_avatar_pic"
                android:layout_width="@dimen/circle_icon_108px"
                android:layout_height="@dimen/circle_icon_108px"
                android:src="@drawable/img_default"
                android:scaleType="centerCrop"/>-->

            <ImageView
                android:id="@+id/personal_info_set_avatar"
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>

        <View style="@style/layout_line_gray"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"></View>


        <LinearLayout
            android:id="@+id/ll_name"
            android:background="@drawable/ll_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="昵称"
                style="@style/text_dark_max"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/personal_info_set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_gray_mid"
                android:text="萌萌哒小甜甜"/>
            <ImageView
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>

        <View style="@style/layout_line_gray"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"></View>

        <LinearLayout
            android:id="@+id/ll_gender"
            android:background="@drawable/ll_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="性别"
                style="@style/text_dark_max" />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/personal_info_set_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_gray_mid"
                android:text="女"/>
            <ImageView
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>

        <View style="@style/layout_line_gray"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"></View>

        <LinearLayout
            android:id="@+id/ll_tags"
            android:background="@drawable/ll_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标签"
                style="@style/text_dark_max" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_tagsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <include layout="@layout/item_tag"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>

        <View style="@style/layout_line_gray"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"></View>

        <LinearLayout
            android:id="@+id/ll_signature"
            android:layout_width="match_parent"
            android:background="@drawable/ll_white"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="简介"
                style="@style/text_dark_max" />

            <TextView
                android:id="@+id/personal_info_set_intro"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:background="@android:color/transparent"
                android:hint="这家伙很懒什么都没留下"
                style="@style/text_gray_mid"
                android:layout_marginLeft="@dimen/margin_50px"
                android:layout_marginTop="@dimen/margin_50px"
                android:layout_marginBottom="@dimen/margin_40px"/>
            <ImageView
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>

    </LinearLayout>


    <View style="@style/layout_line_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_label_100px"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_40px"
        android:paddingRight="@dimen/margin_40px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/bg_red" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="账号信息" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机"
                style="@style/text_dark_max" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="18888888888"
                style="@style/text_gray_mid"
                android:gravity="right"/>

            <ImageView
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <View style="@style/layout_line_gray"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"></View>


        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:background="@drawable/ll_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="修改密码"
                style="@style/text_dark_max"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/personal_info_set_pwd"
                android:layout_width="@dimen/icon_more_36px"
                android:layout_height="@dimen/icon_more_36px"
                android:layout_marginLeft="@dimen/margin_40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more" />
        </LinearLayout>
        </LinearLayout>

    <View style="@style/layout_line_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_label_100px"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_40px"
        android:paddingRight="@dimen/margin_40px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/bg_red" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="消息提醒" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="消息提醒"
                style="@style/text_dark_max"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/personal_info_set_Msg_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
            <View style="@style/layout_line_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/margin_80px"
        android:paddingBottom="@dimen/margin_80px"
        android:background="@color/bg_gray"
        android:orientation="horizontal">

        <Button
            android:id="@+id/personal_info_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_big_120px"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginRight="@dimen/margin_40px"
            android:background="@drawable/btn_big_green"
            style="@style/text_white_max"
            android:text="退出登录" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
