<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <ImageView
            android:id="@+id/iv_personage_item_share_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_personage_item_share_cover_num"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="5P"
            android:background="@drawable/bg_pagenum"
            style="@style/text_white_min"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_coverInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_personage_item_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            style="@style/text_pink_max"/>
        <TextView
            android:id="@+id/tv_personage_item_share_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/text_gray_min"
            android:text="2011年11月11日"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_praise"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/bg_radius_red_trans"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/tv_personage_item_share_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    style="@style/text_pink_mid"
                    android:text="56"/>
            </LinearLayout>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_evaluation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/bg_radius_red_trans"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_evaluation"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/tv_personage_item_share_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    style="@style/text_pink_mid"
                    android:text="120"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView style="@style/layout_line_gray"/>
    <LinearLayout
        android:id="@+id/ll_evaluationList"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/bg_white"
        android:orientation="vertical">
    </LinearLayout>
    <TextView style="@style/layout_line_gray"/>
    <TextView
        android:id="@+id/tv_personage_item_share_total_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看全部120条评论"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        style="@style/text_pink_mid"
        android:gravity="center"/>
</LinearLayout>
