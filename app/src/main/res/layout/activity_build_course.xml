<?xml version="1.0" encoding="utf-8"?><!--创建教程页面布局-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title"
            layout="@layout/component_title" />

        <ImageView
            android:id="@+id/iv_course_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_height_course_cover"
            android:background="#cccccc"
            android:contentDescription="教程封面" />

        <EditText
            android:id="@+id/etv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:hint="教程名称"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#cccccc"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cccccc" />

        <com.netease.ecos.views.ExtensibleListView
            android:id="@+id/lv_build_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="教程列表"
            android:descendantFocusability="afterDescendants"
            android:dividerHeight="10dp"
            android:listSelector="#e7e7e7" />

        <Button
            android:id="@+id/btn_add_step"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector_btn_add_step"
            android:text="添加步骤"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_iss_course"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_selector_btn_issue_course"
            android:text="发布!"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>