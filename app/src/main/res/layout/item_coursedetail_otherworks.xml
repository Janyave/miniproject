<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/course_detail_otherWorks_width"
        android:layout_height="@dimen/course_detail_otherWorks_height"
        android:background="@drawable/bg_course_item"
        android:layout_marginRight="8dp">
        <!-- 图片-->
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/course_detail_otherWorks_width"
            android:layout_height="@dimen/course_detail_otherWorks_img_width"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"/>

        <!--个人头像和姓名-->
        <LinearLayout
            android:id="@+id/ll_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="我是姓名"
                style="@style/text_dark_min"/>
            <!-- 日期-->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:text="2011年11月11日"
                style="@style/text_gray_min"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>