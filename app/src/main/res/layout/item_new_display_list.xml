<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/displayCoverImVw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workDetail_ImgVw_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/displayTitleTxVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/displayCoverImVw"
        android:layout_marginTop="5dp"
        android:text="我爱罗眼妆"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/displayFavorTxVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/displayTitleTxVw"
        android:layout_marginTop="5dp"
        android:text="56个赞" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/displayCoverImVw" />


</RelativeLayout>