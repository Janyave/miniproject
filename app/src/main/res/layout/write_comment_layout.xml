<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/bg_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <EditText
            android:id="@+id/workDetailsCommentEdTx"
            android:layout_width="@dimen/workDetailComment_EdTx_width"
            android:layout_height="@dimen/workDetailComment_EdTx_height"
            android:hint="@string/comment_hint"
            android:paddingBottom="@dimen/commentDetaiPaddingTop"
            android:paddingLeft="@dimen/commentDetaiPaddingLeft"
            android:paddingTop="@dimen/commentDetaiPaddingTop"
            android:textSize="@dimen/commentDetailTextSize" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/workDetailComment_EdTx_height"
            android:background="@null"
            android:text="@string/favour"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/commentDetailTextSize" />

    </LinearLayout>

</LinearLayout>
