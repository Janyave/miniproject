<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/bg_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_40px"
            android:background="@drawable/comment_shape"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_50px"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginTop="@dimen/margin_50px">

            <EditText
                android:id="@+id/workDetailsCommentEdTx"
                style="@style/text_dark_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/text_gray"
                android:paddingBottom="@dimen/margin_30px"
                android:paddingLeft="@dimen/margin_50px"
                android:paddingTop="@dimen/margin_30px" />
        </LinearLayout>
        <TextView style="@style/layout_line_gray_v"/>

        <Button
            android:id="@+id/favorBtn"
            android:layout_width="60dp"
            android:layout_height="@dimen/workDetailComment_EdTx_height"
            android:background="@null"
            android:text="@string/favour"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/commentDetailTextSize" />

    </LinearLayout>

</LinearLayout>
