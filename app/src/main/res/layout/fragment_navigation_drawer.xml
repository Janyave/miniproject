<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/bg_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_110px"
            android:gravity="center_horizontal">
            <com.netease.ecos.utils.RoundImageView
                android:id="@+id/iv_personage_portrait"
                android:layout_width="@dimen/circle_icon_210px"
                android:layout_height="@dimen/circle_icon_210px"
                android:src="@drawable/img_default_portrait"/>
            <ImageView
                android:id="@+id/riv_personage_gender"
                android:layout_width="@dimen/circle_icon_50px"
                android:layout_height="@dimen/circle_icon_50px"
                android:layout_alignBottom="@id/iv_personage_portrait"
                android:layout_alignRight="@id/iv_personage_portrait"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/ic_gender_female" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_personage_name_default"
            android:id="@+id/bt_personage_name"
            style="@style/text_dark_max"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_30px"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_20px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_personage_attention"
                style="@style/text_gray_mid"
                android:layout_marginRight="@dimen/margin_10px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tv_personage_attention_default"
                style="@style/text_pink_mid"
                android:id="@+id/tv_personage_attention" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_30px"
                android:background="@color/bg_gray_dark"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginRight="@dimen/margin_20px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_personage_fans"
                style="@style/text_gray_mid"
                android:layout_marginRight="@dimen/margin_10px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/tv_personage_fans_default"
                style="@style/text_pink_mid"
                android:id="@+id/tv_personage_fans"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40px"
            android:text="@string/tv_personage_description_default"
            android:id="@+id/tv_personage_description"
            style="@style/text_pink_mid"
            android:textColor="@color/bg_red_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_110px"
            android:gravity="bottom|center_horizontal">
            <TextView
                android:layout_width="@dimen/margin_30px"
                android:layout_height="@dimen/margin_30px"
                android:background="@drawable/icon_person_special_triangle"
                android:rotationX="90"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_red"
        android:paddingTop="@dimen/margin_50px">
        <LinearLayout
            android:id="@+id/ll_personcenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_notification"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_person"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_personcenterNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_notification"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_notification"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_notificationNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_contact"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_contact"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_contactNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_course"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_course"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_course"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_courseNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_display"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_display"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_display"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_displayNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_activity"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_activity"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_activityNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_recruite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_50px"
            android:paddingRight="@dimen/margin_30px">
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_recruite"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_recruite"
                style="@style/text_white_mid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_recruiteNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_notification_40px"
                android:minWidth="20dp"
                android:gravity="center"
                android:text="11"
                android:background="@drawable/bg_side_notification"
                style="@style/text_pink_min"
                android:layout_marginRight="@dimen/margin_20px"/>
            <ImageView
                android:layout_width="@dimen/icon_big_64px"
                android:layout_height="@dimen/icon_big_64px"
                android:src="@mipmap/ic_more_white"
                android:padding="2dp"/>
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView style="@style/layout_line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_140px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/margin_50px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/icon_sidebar_54px"
                android:layout_height="@dimen/icon_sidebar_54px"
                android:src="@mipmap/ic_side_setting"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/bt_personage_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_40px"
                android:text="@string/side_setting"
                style="@style/text_white_mid"/>
        </LinearLayout>


