<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/component_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/commentDetaiPaddingTop"
        android:paddingLeft="@dimen/commentDetaiPaddingLeft"
        android:paddingTop="@dimen/commentDetaiPaddingLeft">

        <ImageView
            android:id="@+id/uploadWorkImgVw"
            android:layout_width="@dimen/uploadWork_Img_width"
            android:layout_height="@dimen/uploadWork_Img_height"
            android:layout_marginRight="@dimen/commentDetaiPaddingTop"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/uploadWorkEdTx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uploadWork_Img_height"
            android:background="@null"
            android:gravity="top|left"
            android:hint="@string/work_hint"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:scaleType="fitXY"
        android:src="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingTop="@dimen/commentDetaiPaddingTop">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="微信" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="易信" />

    </LinearLayout>


</LinearLayout>