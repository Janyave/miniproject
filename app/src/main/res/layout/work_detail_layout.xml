<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/component_title" />

    <!-- set the gesture to transparent-->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gestureColor="@android:color/transparent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants">

                    <include
                        android:id="@+id/workDetailsPerson"
                        layout="@layout/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"></include>

                    <ImageView
                        android:id="@+id/workDetailImgVw"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/workDetail_ImgVw_height"
                        android:layout_toRightOf="@id/workDetailsPerson"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/workDetailDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/workDetailImgVw"
                        android:text="2015-05-15" />

                    <TextView
                        android:id="@+id/workDetailDescpTxVw"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/workDetailImgVw"
                        android:layout_below="@id/workDetailDate"
                        android:text="这是我的作品，模仿的对象是某某某，重点是什么什么，希望大家喜欢。" />

                    <TextView
                        android:id="@+id/workDetailFavorTxVw"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/workDetailDescpTxVw"
                        android:layout_below="@id/workDetailDescpTxVw"
                        android:text="56个赞" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/divider_height"
                        android:layout_alignLeft="@id/workDetailFavorTxVw"
                        android:layout_below="@id/workDetailFavorTxVw"
                        android:scaleType="centerCrop"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <com.netease.ecos.views.ExtensibleListView
                    android:id="@+id/workDetailsLsVw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:dividerHeight="3dp"
                    android:listSelector="#e7e7e7"></com.netease.ecos.views.ExtensibleListView>

                <include
                    layout="@layout/write_comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </android.gesture.GestureOverlayView>
</LinearLayout>