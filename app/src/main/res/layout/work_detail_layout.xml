<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/component_title" />

    <!-- set the gesture to transparent-->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gestureColor="@android:color/transparent"
        android:uncertainGestureColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/workDetailComment_EdTx_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/commentDetaiPaddingLeft"
                    android:paddingRight="@dimen/commentDetaiPaddingLeft">

                    <ImageView
                        android:id="@+id/workDetailImgVw"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/workDetail_ImgVw_height"
                        android:layout_marginTop="@dimen/commentDetaiPaddingTop"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:src="@mipmap/ic_launcher" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/commentDetaiPaddingTop"
                        android:descendantFocusability="beforeDescendants">

                        <include
                            android:id="@+id/workDetailsPerson"
                            layout="@layout/person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"></include>

                        <TextView
                            android:id="@+id/workDetailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2015-05-15"
                            android:textSize="@dimen/textsizeS" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/workDetailDescpTxVw"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/commentDetaiPaddingTop"
                        android:text="这是我的作品，模仿的对象是某某某，重点是什么什么，希望大家喜欢。"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/workDetailFavorTxVw"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/commentDetaiPaddingTop"
                        android:layout_marginTop="@dimen/commentDetaiPaddingTop"
                        android:text="56个赞" />

                    <include
                        layout="@layout/comment_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.netease.ecos.views.ExtensibleListView
                        android:id="@+id/workDetailsLsVw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:dividerHeight="3dp"
                        android:listSelector="#e7e7e7"></com.netease.ecos.views.ExtensibleListView>


                </LinearLayout>
            </ScrollView>

            <include
                layout="@layout/write_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


    </android.gesture.GestureOverlayView>
</LinearLayout>