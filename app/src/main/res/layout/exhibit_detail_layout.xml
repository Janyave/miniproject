<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_title"
        layout="@layout/component_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_title_height"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_title"
        android:layout_marginBottom="@dimen/workDetailCommentLayoutHeight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/commentDetaiPaddingLeft"
            android:paddingRight="@dimen/commentDetaiPaddingLeft"
            android:paddingTop="@dimen/commentDetaiPaddingTop">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/exhibitCoverImgVw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/workDetail_ImgVw_height"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commentDetaiPaddingTop"
                android:layout_marginTop="@dimen/commentDetaiPaddingTop"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/exhibitPersonImgVw"
                    android:layout_width="@dimen/personImageView_width"
                    android:layout_height="@dimen/personImageView_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/commentDetaiPaddingLeft" />

                <TextView
                    android:id="@+id/exhibitPersonNameTxVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/exhibitPersonImgVw"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/exhibitPersonImgVw"
                    android:text="三次元的鸣人"
                    android:textSize="@dimen/textSize" />

                <Button
                    android:id="@+id/exhibitFocusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/workDetailComment_EdTx_height"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="关注" />

            </RelativeLayout>

            <TextView
                android:id="@+id/exhibitTitleTxVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commentDetaiPaddingTop"
                android:text="叛逆的鲁鲁修"
                android:textColor="@color/bg_red"
                android:textSize="@dimen/textsizeL" />

            <TextView
                android:id="@+id/exhibitTitleContentTxVw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commentDetaiPaddingTop"
                android:text="最后两张花絮【似乎有两张发不上来？完整版请戳coser路德七世吧】"
                android:textSize="@dimen/textSize" />

            <com.netease.ecos.views.ExtensibleListView
                android:id="@+id/exhibitLsVw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commentDetaiPaddingTop"
                android:divider="#00000000" />

            <include
                layout="@layout/comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.netease.ecos.views.ExtensibleListView
                android:id="@+id/exhibitCommentLsVw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/write_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>
</RelativeLayout>