<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/personPicImgView"
        android:layout_width="@dimen/personImageView_width"
        android:layout_height="@dimen/personImageView_height"
        android:layout_marginBottom="@dimen/commentDetaiPaddingLeft" />

    <TextView
        android:id="@+id/personNameTxV"
        android:layout_width="@dimen/personImageView_width"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/hello_world"
        android:textSize="11sp" />

</LinearLayout>