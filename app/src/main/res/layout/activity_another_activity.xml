<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/makeuperBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/makeuper" />

        <Button
            android:id="@+id/propBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/prop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hairBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/hair" />

        <Button
            android:id="@+id/costumeBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/costume" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/photographyBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/photography" />

        <Button
            android:id="@+id/backstageBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/backstage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/experienceBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/experience" />

        <Button
            android:id="@+id/othersBtn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/others" />
    </LinearLayout>


</LinearLayout>
