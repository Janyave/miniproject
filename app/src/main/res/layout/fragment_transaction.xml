<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/makeuper_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/makeuper" />

        <Button
            android:id="@+id/photography_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/photography" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backstage_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/backstage" />

        <Button
            android:id="@+id/costume_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/costume" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/courseType_layout_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prop_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:layout_marginRight="@dimen/courseType_btn_padding"
            android:background="@drawable/icon_button"
            android:text="@string/prop" />

        <Button
            android:id="@+id/others_btn"
            android:layout_width="@dimen/courseType_btn_width"
            android:layout_height="@dimen/courseType_btn_height"
            android:background="@drawable/icon_button"
            android:text="@string/others" />
    </LinearLayout>


</LinearLayout>
