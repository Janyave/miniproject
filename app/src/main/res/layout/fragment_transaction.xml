<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/coursePadding"
    android:paddingLeft="@dimen/coursePadding"
    android:paddingRight="@dimen/coursePadding"
    android:paddingTop="@dimen/coursePadding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/coursePadding"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/makeuper_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/coursePadding"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/photography_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/coursePadding"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backstage_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/coursePadding"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/costume_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prop_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/coursePadding"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/others_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_button"
            android:scaleType="centerCrop" />
    </LinearLayout>


</LinearLayout>
