<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/makeuper_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="化妆" />
        </LinearLayout>

        <View style="@style/layout_line_gray_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photography_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="道具" />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/layout_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backstage_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="摄影" />
        </LinearLayout>

        <View style="@style/layout_line_gray_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/costume_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="后期" />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/layout_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prop_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="服装" />
        </LinearLayout>

        <View style="@style/layout_line_gray_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/others_btn"
                android:layout_width="@dimen/icon_big_200px"
                android:layout_height="@dimen/icon_big_200px"
                android:background="@drawable/icon_button"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/text_dark_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50px"
                android:text="其他" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/layout_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/releaseRecruitmentTxVw"
            style="@style/text_white_max"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_big_120px"
            android:layout_marginBottom="@dimen/margin_60px"
            android:layout_marginTop="@dimen/margin_60px"
            android:background="@drawable/btn_big_pink"
            android:gravity="center"
            android:text="我要挂牌" />
    </LinearLayout>


</LinearLayout>
