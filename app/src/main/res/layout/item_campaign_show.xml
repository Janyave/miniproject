<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="130dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/iv_campaign_dis"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="西南Cosplay超级展览"
        android:id="@+id/tv_campaign_title"
        android:layout_alignTop="@+id/iv_campaign_dis"
        android:layout_toRightOf="@+id/iv_campaign_dis"
        android:layout_toEndOf="@+id/iv_campaign_dis"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:id="@+id/tv_campaign_time"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_campaign_title"
        android:layout_alignLeft="@+id/tv_campaign_title"
        android:layout_alignStart="@+id/tv_campaign_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="成都"
        android:id="@+id/tv_campaign_location"
        android:layout_below="@+id/tv_campaign_time"
        android:layout_alignLeft="@+id/tv_campaign_time"
        android:layout_alignStart="@+id/tv_campaign_time" />


</RelativeLayout>
